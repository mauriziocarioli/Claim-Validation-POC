package net.citrite.pip.claim_validation_poc;

import net.citrite.pip.sfdc.Order;
import net.citrite.pip.sfdc.OriginalOrder;
import net.citrite.pip.bre.Validation;

rule "SomeRule"
	dialect "mvel"
	when
		Order( orderCreationDate : orderHeader.order_Creation_Date)
		OriginalOrder( originalOrderCreationDate : creation_Date)
		validation : Validation( )
		Helper(betweenDates(orderCreationDate,originalOrderCreationDate)>2)
	then
		modify( validation ) {
				setCheckName( "Minimum Follow On Order Timeline Unmet" ), 
				setCheckType( "STANDARD" ), 
				setCheckResult( "FAIL" ), 
				setHeader( true )
		}
end
