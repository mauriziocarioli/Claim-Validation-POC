package net.citrite.pip.claim_validation_poc;

import net.citrite.pip.sfdc.Order;
import net.citrite.pip.sfdc.RewardRegistration;
import net.citrite.pip.bre.Validation;
import net.citrite.pip.canonical.bre.BREObjectSFDC;

rule "Validation - 30 days"
	dialect "mvel"
	when
		>BREObjectSFDC( d : request.rewardRegistration.initial_Submitted_Date)
		>BREObjectSFDC( request.order.orderHeader.order_Creation_Date < d , orderId : request.order.orderHeader.order_ID)
		>bre : BREObjectSFDC( )
	then
		>bre.registerValidation( orderId, "Minimum Registration Timeline Unmet", "STANDARD", "FAIL", true );
end
